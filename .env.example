# Copy this file to `.env` and adjust values as needed.

# Provider Configuration
# LLM Provider: ollama (default), openai, gemini
LLM_PROVIDER=ollama
# Embedding Provider: ollama (default), openai
EMBEDDING_PROVIDER=ollama

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
# Validate connectivity at startup (true/false)
NEO4J_VERIFY_CONNECTIVITY=true

# Ollama (local models - default)
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=qwen3:8b

# OpenAI (external provider - optional)
# Required if LLM_PROVIDER=openai or EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=
# OpenAI models to use
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# Default embedding vector dimensions for OpenAI models
OPENAI_EMBEDDING_DIMENSIONS=768

# Google Gemini (external provider - future implementation)
# Required if LLM_PROVIDER=gemini
GOOGLE_API_KEY=
# Google model to use
GOOGLE_MODEL=gemini-2.0-flash-exp

# Redis (optional)
REDIS_URL=redis://localhost:6379

# API
API_HOST=0.0.0.0
API_PORT=8000
