# Copy this file to `.env` and adjust values as needed.

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
# Validate connectivity at startup (true/false)
NEO4J_VERIFY_CONNECTIVITY=true

# Ollama (local models)
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=qwen3:8b

# OpenAI (optional; used if embedding_provider=openai)
# If unset or empty, OpenAI embeddings are disabled and a fallback is used in dev
OPENAI_API_KEY=
# Default embedding vector dimensions for OpenAI models
OPENAI_EMBEDDING_DIMENSIONS=768

# Redis (optional)
REDIS_URL=redis://localhost:6379

# API
API_HOST=0.0.0.0
API_PORT=8000
